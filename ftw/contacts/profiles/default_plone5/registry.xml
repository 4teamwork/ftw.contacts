<registry>

    <records interface="ftw.contacts.interfaces.IContactsSettings" />

    <records interface="Products.CMFPlone.interfaces.controlpanel.IImagingSchema" prefix="plone">
        <value key="allowed_sizes" purge="false">
            <element>portrait 300:300</element>
        </value>
    </records>

    <records prefix="plone.resources/ftw-contacts-css" interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="css">
            <element>++resource++ftw.contacts.resources/ftw.contacts.css</element>
        </value>
    </records>

    <records prefix="plone.bundles/ftw-contacts-resources" interface='Products.CMFPlone.interfaces.IBundleRegistry'>
        <value key="resources">
            <element>ftw-contacs-css</element>
        </value>
        <value key="enabled">True</value>
        <value key="depends">plone-legacy</value>
        <value key="compile">False</value>
        <value key="csscompilation">++plone++datetimepicker/ftw-contacts-compiled.css</value>
        <value key="merge_with">default</value>
    </records>

</registry>
